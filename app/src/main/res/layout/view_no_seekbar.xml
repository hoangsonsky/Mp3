<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlt_custom"
    >

    <LinearLayout
        android:background="#333030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/dia"
        android:layout_weight="2"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nameCustomPlay"
                android:textColor="#fffefe"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="abc"/>
        </HorizontalScrollView>
        <TextView
            android:textColor="#fffefe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_artistCustomPlay"
            android:lines="1"
            android:text="abc"/>
    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/back_song"
        android:id="@+id/img_backCustomPlay"
        android:layout_weight="1"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/play"
        android:id="@+id/img_playCustomPlay"
        android:layout_weight="2"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/img_nextCustomPlay"
        android:src="@drawable/next_song"
        android:layout_weight="1"
        />
    </LinearLayout>
</RelativeLayout>
